@{
    ViewData["Title"] = "Home Page";
    //This is the form where people can add a movie
}

@model Movie 

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add a Movie To The Collection</title>
    <style>
        .text-left {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

            .text-left label {
                margin-bottom: 5px; /* Optional: Add spacing between labels */
            }

            .text-left input {
                margin-bottom: 10px; /* Optional: Add spacing between inputs */
            }
    </style>
</head>
<body>

    <div class="text-left">
        <h1 class="display-4">Add a Movie To The Collection</h1>
        <form method="post">

            <input type="hidden" asp-for="MovieId" />

            <label asp-for="CategoryId">Category: *</label>
            <input asp-for="CategoryId" required />

            <label asp-for="Title">Title: *</label>
            <input asp-for="Title" required />

            <label asp-for="Year">Year: *</label>
            <input asp-for="Year" required />

            <label asp-for="Director">Director: *</label>
            <input asp-for="Director" required />

            <label asp-for="Rating">Rating: *</label>
            <select asp-for="Rating" required>
                <option value="">Select Rating</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>

            <label asp-for="Edited">Edited: *</label>
            <select asp-for="Edited" required>
                <option value="">Select Option</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>

            <label asp-for="LentTo">LentTo:</label>
            <input asp-for="LentTo">

            <label asp-for="CopiedToPlex">CopiedToPlex: *</label>
            <select asp-for="CopiedToPlex" required>
                <option value="">Select Option</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>

            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes">

            <p>* indicates required field.</p>
            <button type="submit">Submit</button>

            <div asp-validation-summary="All"></div>
        </form>
    </div>
</body>